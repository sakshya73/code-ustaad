{
  "name": "code-ustaad",
  "displayName": "Code Ustaad üë®‚Äçüè´",
  "description": "Your AI coding mentor. Explains complex code in Hinglish (Hindi + English).",
  "version": "0.0.1",
  "publisher": "code-ustaad", 
  "icon": "icon.png", 
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sakshya73/code-ustaad"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Machine Learning" 
  ],
  "keywords": [
    "hinglish",
    "hindi",
    "python",
    "react",
    "javascript",
    "mentor",
    "beginner",
    "ai",
    "gemini",
    "openai"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-ustaad.askUstaad",
        "title": "Ask Ustaad (Explain in Hinglish)" 
      },
      {
        "command": "code-ustaad.setApiKey",
        "title": "Code Ustaad: Set API Key"
      },
      {
        "command": "code-ustaad.clearApiKey",
        "title": "Code Ustaad: Clear API Key"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "code-ustaad.askUstaad",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-ustaad.askUstaad",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Code Ustaad",
      "properties": {
        "codeUstaad.provider": {
          "type": "string",
          "default": "gemini",
          "description": "Choose your AI provider. Gemini is recommended for free usage.",
          "enum": [
            "gemini",
            "openai"
          ],
          "enumDescriptions": [
            "Use Google Gemini (Free Tier Available)",
            "Use OpenAI (Requires Paid Credits)"
          ]
        },
        "codeUstaad.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-3.5-turbo"
          ]
        },
        "codeUstaad.geminiModel": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "Gemini model to use. 'gemini-2.5-flash' is the current recommended model for speed and the free tier.",
          "enum": [
            "gemini-2.5-flash",
            "gemini-2.5-flash-lite",
            "gemini-2.0-flash"
          ]
        },
        "codeUstaad.personaIntensity": {
          "type": "string",
          "default": "balanced",
          "description": "Ustaad's teaching style",
          "enum": [
            "strict",
            "balanced",
            "funny"
          ],
          "enumDescriptions": [
            "Strict Tech Lead - Focus on bugs and best practices",
            "Balanced Mentor - Mix of teaching and encouragement",
            "Funny Bhai - Jokes, Bollywood references, and slang"
          ]
        },
        "codeUstaad.maxHistoryItems": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of explanations to keep in history"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "markdown-it": "^14.1.0",
    "openai": "^4.24.0"
  }
}